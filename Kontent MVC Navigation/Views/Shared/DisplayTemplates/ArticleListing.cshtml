@model KenticoKontentModels.Article

    <div style="margin:auto; text-align:center; width:80%;">
        <localized-route asp-controller="Articles" asp-action="Show" asp-route-url_pattern=@Model.UrlPattern>
            <h3>@Model.Title</h3>
        </localized-route>
        <div>
            <img src=@Model.TeaserImage.FirstOrDefault().Url height="50%" width="50%" />
        </div>
        <div>
            @Model.Summary
        </div>
    </div>
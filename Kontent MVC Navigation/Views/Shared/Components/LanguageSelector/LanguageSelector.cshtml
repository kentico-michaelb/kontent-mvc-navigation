@using System.Globalization

@model LanguageSwitcher

<div>
    Language selector:
    <ul>
        @foreach (LanguageSwitcherOption co in Model.CultureOptions)
        {
            <li>
                <a asp-controller=@co.TranslatedController.ToLower() asp-action=@co.TranslatedAction.ToLower()
                   asp-route-culture=@co.CultureCode asp-route-url_pattern=@co.UrlPattern>
                    @co.DisplayName
                </a>
            </li>
        }
    </ul>
</div>
